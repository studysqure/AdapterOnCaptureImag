<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.DashBoardActivity">

    <View
        android:layout_width="wrap_content"
        android:layout_height="200dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            app:cardCornerRadius="7dp"
            android:layout_margin="10dp"
            android:background="@drawable/border_strok_layout"
            android:elevation="7dp">

            <TextView
                android:id="@+id/Add_attenence_txt_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:text="Attenence"
                android:drawableTop="@drawable/ic_baseline_add_to_photos_24"
                android:drawablePadding="7dp"
                android:padding="11dp"
                android:gravity="center"/>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            app:cardCornerRadius="7dp"
            android:layout_margin="10dp"
            android:background="@drawable/border_strok_layout"
            android:elevation="7dp">

            <TextView
                android:id="@+id/feed_back_txt_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:padding="11dp"
                android:text="FeedBack"
               android:drawableTop="@drawable/ic_baseline_feedback_24"
                android:gravity="center"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>



</LinearLayout>